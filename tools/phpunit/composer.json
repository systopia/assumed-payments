{
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/systopia/test-fixtures.git"
        }
    ],
    "require": {
        "symfony/phpunit-bridge": "^7",
        "systopia/test-fixtures": "dev-main"
    },
    "scripts": {
        "post-install-cmd": [
            "@php vendor/bin/simple-phpunit install --configuration ../../phpunit.xml.dist"
        ],
        "post-update-cmd": [
            "@php vendor/bin/simple-phpunit install --configuration ../../phpunit.xml.dist"
        ]
    }
}
